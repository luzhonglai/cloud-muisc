/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.item {
  width: 100%;
  height: 100rpx;
  position: relative;
  text-align: center;
  color: #000;
  background: yellow;
  display: block;
  line-height: 100rpx;
}

.item ::after {
  content: '';
  width: 660rpx;
  height: 2rpx;
  background-color: #eee;
  position: absolute;
  right: 0;
  bottom: 0;
}

.kelong {
  position: absolute;
  z-index: 22;
}
